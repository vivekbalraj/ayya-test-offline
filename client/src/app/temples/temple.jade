.temple.container(ng-controller="TempleController as temple")

  .card-panel.blue.darken-4.center-align
    h3.white-text {{temple.temple.name}}

  .card-panel(ng-if="temple.temple.images && temple.temple.images.length > 0")
    .slider
      ul.slides
        li(ng-repeat="image in temple.temple.images")
          img(src="{{image}}" height="100%" alt="{{temple.temple.name}}")

  .card-panel(ng-if="temple.temple.information")
    p.new-line-fix {{temple.temple.information}}

  .card-panel
    .clearfix.iconify(ng-if="temple.temple.founded_at")
      span.circle {{temple.temple.founded_at}}
      | துடக்கம்
    .clearfix.iconify(ng-if="temple.temple.is_primary_thangal")
      img.map-icon(src="assets/images/temple.svg")
      | அய்யா கால் நாட்டிக் கொடுத்த நிழல்தாங்கள்.
    .clearfix.iconify(ng-if="temple.temple.priest_name")
      img.map-icon(src="assets/images/priest.svg")
      | {{temple.temple.priest_name}}
    .clearfix.iconify(ng-if="temple.temple.book_month")
      img.map-icon(src="assets/images/book.svg")
      | {{temple.temple.book_month}} மாதம் திரு ஏடு வாசிப்பு நடைபெறும்.
    .clearfix.iconify(ng-if="temple.temple.cars && temple.temple.cars.length > 0")
      img.map-icon(src="assets/images/charriot.svg")
      span(ng-repeat="car in temple.temple.cars track by car.id") {{car.name}}
        span(ng-if="!$last") , 
    .clearfix.iconify(ng-if="temple.temple.views > 1")
      span.circle {{temple.temple.views}}
      | முறை பார்க்கப்பட்டுள்ளது

  .card-panel.center-align(ng-if="temple.temple.facebook_page_url")
    .fb-page(data-href="{{temple.temple.facebook_page_url}}" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true")

  .card-panel(ng-if="temple.temple.latitude")
    div(map-lazy-load="https://maps.google.com/maps/api/js?key=AIzaSyCmU_GnOsVq-wNbisGQuxB_6l9e4ZF42N4")
      map(id="temple-map", center="{{temple.temple.latitude}}, {{temple.temple.longitude}}", zoom="13", default-style="false", style="width: 100%")
        marker(position="{{temple.temple.latitude}}, {{temple.temple.longitude}}")

  .card-panel
    .fb-like(data-href="{{temple.$location.absUrl()}}" data-layout="button_count" data-action="like" data-size="large" data-show-faces="true" data-share="true")

  .card-panel.center-align
    .fb-comments(data-href="{{temple.$location.absUrl()}}" data-numposts="5")
